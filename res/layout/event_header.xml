<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_header"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    
	<ImageView
	    android:id="@+id/album_picture_header"
	    android:layout_width="60dp"
	    android:layout_height="60dp"
	    android:layout_marginLeft="5dp"
	    android:layout_marginTop="5dp"
	    android:src="@drawable/ic_launcher" 
	    android:scaleType="fitCenter"/>
    
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/album_picture_header"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/album_title_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp" 
            android:hint="This is title for..."/>

        <TextView
            android:id="@+id/album_timestamp_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="This is title for..." />


    </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            
            android:background="@android:color/darker_gray" />

</RelativeLayout>